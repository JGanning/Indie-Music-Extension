{
    "manifest_version": 2,
    "name": "Music Player Extension",
    "description": "Indie Music",
    "version": "1.0.0",
    "icons": {"128": "images/128_icon.png"},
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"        
    },
    "background": {
        "scripts": ["popup.js"],
        "persistent": true
    },
    "options_page": "popup.html",
    "permissions": ["activeTab"]
}
